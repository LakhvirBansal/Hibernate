<?xml version='1.0' encoding='UTF-8'?>  
<!DOCTYPE hibernate-mapping PUBLIC  
 "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
 "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
 <hibernate-mapping>  
  <class name="com.hibernate.entity.Student" table="student">  
    <id name="id" column="STD_ID">  
     <!-- <generator class="assigned"></generator>  --> 
    </id>  
            
    <property name="firstName" column="STD_FNAME"></property>  
    <property name="middleName" column="STD_MNAME"></property> 
    <property name="lastName" column="STD_LNAME"></property>  
            
  </class>  
            
 </hibernate-mapping>  