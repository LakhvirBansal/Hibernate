<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
 
<hibernate-configuration>
<session-factory>
<property name="connection.driver_class">com.mysql.jdbc.Driver
</property>
<property name="connection.url">jdbc:mysql://localhost:3306/common</property>
<property name="connection.username">root</property>
<property name="connection.password">root</property>
 
<!-- <property name="dialect">org.hibernate.dialect</property> -->
<property name="show_sql">true</property>
<property name="hbm2ddl.auto">validate</property>
 
<mapping class="com.hibernate.entity.Payment" />
<mapping class="com.hibernate.entity.Cheque" />
<mapping class="com.hibernate.entity.CreditCard" />

</session-factory>
</hibernate-configuration>